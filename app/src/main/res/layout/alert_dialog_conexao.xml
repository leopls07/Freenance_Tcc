<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/textView29"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="Erro de Conexão"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Falha ao se conectar com os servidores. \nVerifique sua conexão com a internet \ne tente novamente."
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/tentaNovamenteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/botao_radius_laranja"
        android:padding="15dp"
        android:text="TENTAR NOVAMENTE"
        android:textColor="@android:color/black"
        android:textColorHighlight="@color/corTextoLaranja" />
</LinearLayout>